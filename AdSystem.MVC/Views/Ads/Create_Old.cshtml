@model AdSystem.Models.Ad

@{
    ViewBag.Title = "فرم ثبت آگهی";
}

<h2>@ViewBag.Title</h2>

<form action="@Url.Action("Create", "Ads")" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="Title" class="control-label col-sm-2">عنوان</label>
        <div class="col-sm-10">
            <input type="text" name="Title" id="Title" placeholder="عنوان" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Area" class="control-label col-sm-2">مساحت</label>
        <div class="col-sm-10">
            <input type="number" name="Area" id="Area" placeholder="مساحت" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Age" class="control-label col-sm-2">سن بنا</label>
        <div class="col-sm-10">
            <input type="number" name="Age" id="Age" placeholder="سن بنا" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="PricePerUnit" class="control-label col-sm-2">قیمت هر متر مربع</label>
        <div class="col-sm-10">
            <input type="number" name="PricePerUnit" id="PricePerUnit" placeholder="قیمت هر متر مربع" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-success pull-left" type="submit">
            ذخیره
        </button>
    </div>
</form>